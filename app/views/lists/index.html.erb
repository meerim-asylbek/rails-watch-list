<%= render "shared/navbar" %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1505775561242-727b7fba20f0?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80);">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>

<div class="container mt-3 d-flex justify-content-between">
  <h1>My lists</h1>
  <%= link_to "Create a new list", new_list_path, class: "btn btn-flat" %>
</div>

<div class="container mt-3 mb-3">

  <div class="cards">
    <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.picture.key, height: 300, width: 400, crop: :fill %>')">
      <%= link_to list.name, list_path(list) %>
    </div>
    <% end %>
  </div>
</div>
